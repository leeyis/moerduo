{
  "build": {
    "beforeDevCommand": "npm run dev:web",
    "beforeBuildCommand": "npm run build:web",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Moerduo",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APPDATA/*", "$APPDATA/**"]
      },
      "notification": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true,
        "create": true,
        "center": true,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "setDecorations": true,
        "setAlwaysOnTop": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.moerduo.app",
      "icon": [
        "icons/64x64.ico",
        "icons/128x128.ico",
        "icons/256x256.ico",
        "icons/512x512.png"
      ],
      "resources": ["../tools/*"]
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/128x128.ico",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "磨耳朵",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "fileDropEnabled": true
      }
    ]
  }
}
